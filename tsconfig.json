{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM","ES2015","ES2016","ES2017"],

    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
  },
  "include": ["src"],
  "exclude":[
    "node_modules",
    "src/**/*.stories.*",
    "src/**/mock/*"
  ]
}
